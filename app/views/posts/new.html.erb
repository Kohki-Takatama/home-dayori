<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_with model: @post || Post.new, url: posts_path, method: :post do |form| %>
  <%= form.label :radio_name, "ラジオネーム" %>
  <%= form.text_field :radio_name, maxlength: 25 %>

  <%= form.label :content, "本文" %>
  <%= form.text_area :content, maxlength: 225 %>

  <%= link_to "あああ",posts_path, class: "btn btn-active btn-secondary" %>
  
  <%= form.submit "投稿" %>
<% end %>
