<div style="text-align: center;">
<h1 style="text-align: center; font-size: 2em; color: #333;">Thank You</h1>
<%= form_with model: @post || Post.new, url: posts_path, method: :post, id: 'post-form' do |form| %>
  <%= form.label :radio_name, "ラジオネーム" %>
  <div>
    <%= @post.radio_name %>
  </div>
  <%= form.label :content, "本文" %>
  <div>
    <%= @post.content %>
  </div>
  <% if params[:from] == 'vote' %>
    <div>
      投票数: <%= @post.votes.count %>
    </div>
  <% end %>
  <% if current_user %>
    <%= link_to '戻る', posts_path(@post), class: "btn btn-accent" if @post&.persisted? %>
    <% if current_user.sharing?(@post) %>
      <%= form_for(current_user.shares.find_by(post_id: @post.id), method: :delete) do |f| %>
        <%= f.submit "Unshare", class: "btn" %>
      <% end %>
    <% else %>
      <%= form_for(current_user.shares.build, url: shares_path) do |f| %>
        <div><%= hidden_field_tag :post_id, @post.id %></div>
        <%= f.submit "Share", class: "btn" %>
      <% end %>
    <% end %>
  <% else %>
    <p>Votes: <%= @post.votes.count %></p>
  <% end %>
<% end %>
